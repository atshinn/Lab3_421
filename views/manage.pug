extends template.pug

block head
    title Manage Bookstore
block content
    p Manage the bookstore from below:
    form(action='/manage' method='post')
        table(border='0')
            tbody
                tr
                    td Books
                    td
                        select(size=books.length name='bookselection' multiple='multiple')
                            each book in books
                                option(value=book.name)= book.name

            meta(http-equiv="cache-control", content="max-age=0")
            meta(http-equiv="cache-control", content="no-cache")
            meta(http-equiv="expires", content="0")
        br
        ul(style='color: #ff0000')
        input(name='Submit' value='DELETE' type='submit')
        input(name='Submit' value='ADD' type='submit')
        br
        a(href='http://localhost:8000/landing') LOGOUT