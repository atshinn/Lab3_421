extends template.pug

block content
	h2 All the books in the bookstore!
	br
	table(cellpadding="10")
		tbody
			tr
				th Name
				th Price
				th More Info
			each book in books
				tr
					td= book.name
					td= book.price
					td.
						#[a(href=book.url) More Info]
	p.
		I want to
		#[a(href="http://localhost:8000/login") make a purchase!]