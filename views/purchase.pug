extends template.pug

block head
    title Validate
    meta(http-equiv="cache-control", content="max-age=0")
    meta(http-equiv="cache-control", content="no-cache")
    meta(http-equiv="expires", content="0")
    
block content
    h3= thankyou
    p Your Order
    table(style="padding: 1in" cellpadding="2" border="2")
        tbody
            tr
                td
                    b Book
                td
                    b Quantity
                td
                    b Unit Cost
                td
                    b Total Cost
            each row in table
                tr
                    td(align="left")= row.name
                    td(align="right")= row.quantity
                    td(align="right")= row.unitCost
                    td(align="right")= row.totalCost
                    
    p(name='totalCost')= totalCostStr
    br
    p Please enter your Credit Card information
    form(method="post" action="/confirm")
        table(border="0")
            tbody
                tr
                    td Credit Card
                    td(width="92")
                        select(name="Creditcard")
                            option(selected="selected") MasterCard
                            option Visa
                            option Amex
                tr
                    td Card Number
                    td(width="92")
                        input(name="Cardnumber" size="16" type="text" required='' title='4 groups of 4 digits, each separated by 1 space' pattern='[0-9]{4} [0-9]{4} [0-9]{4} [0-9]{4}')
                tr
                    td Express Delivery
                    td(width="92")
                        input(name="expressdelivery" type="checkbox")
        input(name="Cost" type="hidden" value=totalCostStr)
        input(name="Purchase" value="Purchase" type="submit")
        br
        a(href='http://localhost:8000/logout') LOGOUT